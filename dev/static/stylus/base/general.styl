// ОБЩИЕ СТИЛИ

.wrapper
	height 100%
	overflow hidden

.maincontent
	width 100%
	height 100%
	position relative
	top 0%
	transition top 1s

.container 
	width 100%
	max-width 960px
	margin 0 auto
	padding 0 10px
	height 100%

.wrap
	display flex
	flex-direction column
	justify-content center
	height 100%

.section
	height: 100vh
	min-height: 650px

.title
	font-family gagalinFont
	font-size 72px
	text-transform uppercase

// футер к низу

body 
	display flex
	flex-direction column


.main 
	flex auto
